<h1>Welcome to posts page</h1>

<section>
  <div class="card flex">
    <div class="user-image border">
      <img src=<%= @user.photo %> alt="" width="100%" heigth="100%">
    </div>
    <div class="user-data border">
      <h1><%= @user.name %></h1>
      <p class="number-posts">Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
</section>
<section>
  <ul>
    <% @posts.each do |post| %>
      <li class="card left">
        <div class="card">
          <h3><%= post.title %></h3>
          <p><%= post.text %></p>
          <div class="right">
            <span>Comments: <%= post.comments_counter %></span>
            <span>Likes: <%= post.likes_counter %> </span>
          </div>
        </div>
        <div>
        <h4>Comments:</h4>
          <ul>
            <% post.recent_comments.each do |comment| %>
              <p><%= comment.author.name %>: <%= comment.text %></p>
            <% end %>
          </ul>
        </div>

      </li>
    <% end %>
  </ul>
</section>


